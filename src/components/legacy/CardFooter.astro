---
import type { UltType } from "../../../types";

export interface Props {
  ult: UltType;
}

const { likes, datetime } = Astro.props.ult;
---

<div>
  <p class="left">{likes} &#10084;</p>
  <p class="left">{likes} comments</p>
  <p class="right">
    {new Date(datetime).toLocaleTimeString()} - {
      new Date(datetime).toLocaleDateString()
    }
  </p>
</div>

<style>
  div {
    display: flex;
    flex-direction: row;
  }
  .left {
    padding-right: 2rem;
  }
  .right {
    margin-left: auto;
  }
</style>
